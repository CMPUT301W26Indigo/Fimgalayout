<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.entrant.EventDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/primary_blue"
            app:expandedTitleMarginStart="@dimen/spacing_lg"
            app:expandedTitleMarginBottom="@dimen/spacing_lg">

            <!-- Event Poster Image -->
            <ImageView
                android:id="@+id/eventPosterImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/upload_event_poster"
                app:layout_collapseMode="parallax"
                tools:src="@android:drawable/sym_def_app_icon" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding">

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_md">

                <TextView
                    android:id="@+id/eventNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.App.Headline2"
                    tools:text="Summer Basketball Tournament" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/statusChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:textColor="@color/text_white"
                    app:chipBackgroundColor="@color/status_open_green"
                    tools:text="Registration Open" />

            </LinearLayout>

            <!-- Tags -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tagChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:chipSpacingHorizontal="@dimen/spacing_sm" />

            <!-- Details Grid -->
            <androidx.gridlayout.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:columnCount="2"
                app:rowCount="2">

                <!-- Event Date Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xs"
                    app:layout_columnWeight="1"
                    app:cardElevation="@dimen/elevation_sm"
                    app:cardCornerRadius="@dimen/radius_md">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_xs">

                            <ImageView
                                android:layout_width="@dimen/icon_sm"
                                android:layout_height="@dimen/icon_sm"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                android:contentDescription="@string/event_date"
                                app:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_sm"
                                android:text="@string/event_date"
                                android:textAppearance="@style/TextAppearance.App.Caption"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/eventDateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textStyle="bold"
                            tools:text="June 15, 2026" />

                        <TextView
                            android:id="@+id/eventTimeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            tools:text="2:00 PM - 6:00 PM" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Capacity Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xs"
                    app:layout_columnWeight="1"
                    app:cardElevation="@dimen/elevation_sm"
                    app:cardCornerRadius="@dimen/radius_md">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_xs">

                            <ImageView
                                android:layout_width="@dimen/icon_sm"
                                android:layout_height="@dimen/icon_sm"
                                android:src="@android:drawable/ic_menu_agenda"
                                android:contentDescription="@string/capacity"
                                app:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_sm"
                                android:text="@string/capacity"
                                android:textAppearance="@style/TextAppearance.App.Caption"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/capacityText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textStyle="bold"
                            tools:text="28 / 50" />

                        <TextView
                            android:id="@+id/spotsAvailableText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            tools:text="32 spots available" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Location Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xs"
                    app:layout_columnWeight="1"
                    app:cardElevation="@dimen/elevation_sm"
                    app:cardCornerRadius="@dimen/radius_md">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_xs">

                            <ImageView
                                android:layout_width="@dimen/icon_sm"
                                android:layout_height="@dimen/icon_sm"
                                android:src="@android:drawable/ic_dialog_map"
                                android:contentDescription="@string/location"
                                app:tint="@color/text_secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_sm"
                                android:text="@string/location"
                                android:textAppearance="@style/TextAppearance.App.Caption"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/locationNameText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textStyle="bold"
                            tools:text="Community Center" />

                        <TextView
                            android:id="@+id/locationAddressText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            tools:text="123 Main St" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Geolocation Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/geolocationCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_xs"
                    app:layout_columnWeight="1"
                    app:cardElevation="@dimen/elevation_sm"
                    app:cardCornerRadius="@dimen/radius_md"
                    app:cardBackgroundColor="@color/background_orange_50"
                    app:strokeColor="@color/border_orange_200"
                    app:strokeWidth="@dimen/border_thin"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_md">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_xs">

                            <ImageView
                                android:layout_width="@dimen/icon_sm"
                                android:layout_height="@dimen/icon_sm"
                                android:src="@android:drawable/ic_dialog_map"
                                android:contentDescription="@string/geolocation_required"
                                app:tint="@color/secondary_orange" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_sm"
                                android:text="@string/geolocation_required"
                                android:textAppearance="@style/TextAppearance.App.Caption"
                                android:textColor="@color/text_orange_900"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/status_open"
                            android:textAppearance="@style/TextAppearance.App.Title"
                            android:textColor="@color/text_orange_900"
                            android:textStyle="bold"
                            tools:text="Required" />

                        <TextView
                            android:id="@+id/geolocationRadiusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/TextAppearance.App.BodySmall"
                            android:textColor="@color/text_orange_900"
                            tools:text="Within 10km radius" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </androidx.gridlayout.widget.GridLayout>

            <!-- Description Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                app:cardElevation="@dimen/elevation_sm"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardBackgroundColor="@color/background_gray_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textAppearance="@style/TextAppearance.App.Title"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <TextView
                        android:id="@+id/descriptionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.App.Body"
                        tools:text="Join us for an exciting basketball tournament! Teams will compete in a friendly but competitive environment. All skill levels welcome." />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Join Waiting List Button (Fixed at bottom) -->
    <Button
        android:id="@+id/joinWaitlistButton"
        style="@style/Widget.App.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_lg"
        android:layout_gravity="bottom"
        android:text="@string/join_waiting_list"
        android:textSize="@dimen/text_lg"
        android:paddingVertical="@dimen/spacing_lg"
        app:backgroundTint="@color/primary_blue" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
