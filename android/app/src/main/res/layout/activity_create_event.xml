<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginBottom="@dimen/spacing_md"
            app:title="@string/create_event_title"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

        <!-- Event Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/eventNameLayout"
            style="@style/Widget.App.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:hint="@string/event_name">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/eventNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                tools:text="Summer Basketball Tournament" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/descriptionLayout"
            style="@style/Widget.App.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:hint="@string/event_description">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/descriptionEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top|start" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Date and Time Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/eventDateLayout"
                style="@style/Widget.App.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:hint="@string/event_date"
                app:startIconDrawable="@android:drawable/ic_menu_my_calendar">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eventDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/eventTimeLayout"
                style="@style/Widget.App.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/event_time"
                app:startIconDrawable="@android:drawable/ic_menu_recent_history">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/eventTimeEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Registration Period Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardElevation="@dimen/elevation_sm"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardBackgroundColor="@color/background_gray_50">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_period"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/registrationOpensLayout"
                        style="@style/Widget.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/spacing_sm"
                        android:hint="@string/opens">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/registrationOpensEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/registrationClosesLayout"
                        style="@style/Widget.App.TextInputLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/closes">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/registrationClosesEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:clickable="true"
                            android:inputType="none" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Capacity Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_md">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/capacityLayout"
                style="@style/Widget.App.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:hint="@string/event_capacity">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/capacityEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/waitlistLimitLayout"
                style="@style/Widget.App.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/waitlist_limit">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/waitlistLimitEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Location -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locationLayout"
            style="@style/Widget.App.TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            android:hint="@string/location"
            app:startIconDrawable="@android:drawable/ic_dialog_map">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/locationEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Geolocation Requirement Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_md"
            app:cardElevation="@dimen/elevation_sm"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardBackgroundColor="@color/background_orange_50"
            app:strokeColor="@color/border_orange_300"
            app:strokeWidth="@dimen/border_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <!-- Header with Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <ImageView
                        android:layout_width="@dimen/icon_md"
                        android:layout_height="@dimen/icon_md"
                        android:src="@android:drawable/ic_dialog_map"
                        android:contentDescription="@string/geolocation_requirement"
                        app:tint="@color/secondary_orange" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/spacing_sm"
                        android:text="@string/geolocation_requirement"
                        android:textAppearance="@style/TextAppearance.App.Title"
                        android:textColor="@color/text_orange_900"
                        android:textStyle="bold" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/geolocationSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:thumbTint="@color/secondary_orange"
                        app:trackTint="@color/secondary_orange" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/geolocation_desc"
                    android:textAppearance="@style/TextAppearance.App.BodySmall"
                    android:textColor="@color/text_orange_900"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/radiusLayout"
                    style="@style/Widget.App.TextInputLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/radius_km"
                    app:helperText="@string/radius_range"
                    app:helperTextTextColor="@color/text_orange_900">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/radiusEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:enabled="false" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Event Tags -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_tags"
            android:textAppearance="@style/TextAppearance.App.Title"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tagChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_lg"
            app:singleSelection="false"
            app:chipSpacingHorizontal="@dimen/spacing_sm">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSports"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_sports" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMusic"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_music" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipArts"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_arts" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFoodDrink"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_food_drink" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Upload Poster Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/uploadPosterCard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/spacing_md"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="@dimen/elevation_sm"
            app:cardCornerRadius="@dimen/radius_md"
            app:cardBackgroundColor="@color/background_gray_50"
            app:strokeColor="@color/border_gray_300"
            app:strokeWidth="@dimen/border_medium"
            app:strokeDashWidth="@dimen/spacing_sm"
            app:strokeDashGap="@dimen/spacing_xs">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_xl">

                <ImageView
                    android:layout_width="@dimen/icon_xl"
                    android:layout_height="@dimen/icon_xl"
                    android:src="@android:drawable/ic_menu_upload"
                    android:contentDescription="@string/upload_event_poster"
                    app:tint="@color/text_tertiary"
                    android:layout_marginBottom="@dimen/spacing_sm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_event_poster"
                    android:textAppearance="@style/TextAppearance.App.Title"
                    android:layout_marginBottom="@dimen/spacing_xs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/image_format"
                    android:textAppearance="@style/TextAppearance.App.Caption"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <Button
                    android:id="@+id/browseFilesButton"
                    style="@style/Widget.App.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/browse_files" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/priceLayout"
            style="@style/Widget.App.TextInputLayout"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_xs"
            android:hint="@string/price"
            app:prefixText="$">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/priceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="0.00" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/free_events_note"
            android:textAppearance="@style/TextAppearance.App.Caption"
            android:layout_marginBottom="@dimen/spacing_xl" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_lg"
            android:layout_marginBottom="@dimen/spacing_xl">

            <Button
                android:id="@+id/cancelButton"
                style="@style/Widget.App.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:text="@string/cancel" />

            <Button
                android:id="@+id/createEventButton"
                style="@style/Widget.App.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/create_event_generate_qr"
                app:backgroundTint="@color/primary_blue" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
